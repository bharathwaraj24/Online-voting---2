<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorkit"
    tools:context=".Vote"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="135dp">


    <TextView
        android:id="@+id/desc1"
        android:layout_width="191dp"
        android:layout_height="252dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="BAC Party Won: 02      Lost: 01 "
        android:textColor="#F3F1F1"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="191dp"
        android:layout_height="252dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="ABC Party Won: 01      Lost: 02 "
        android:textColor="#F3F1F1"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942" />

        <TextView
            android:id="@+id/can1"
            android:layout_width="154dp"
            android:layout_height="57dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Candidate 1"
            android:textColor="#F3F1F1"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422" />

        <TextView
            android:id="@+id/can2"
            android:layout_width="154dp"
            android:layout_height="57dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Candidate 2"
            android:textColor="#F3F1F1"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.859"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.422" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="144dp"
            android:layout_height="154dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.827"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.201"
            app:srcCompat="@drawable/baseline_account_circle_24"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="330dp"
            android:layout_height="53dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Candidate List"
            android:textColor="#F3F1F1"
            android:textSize="24sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="144dp"
            android:layout_height="154dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.201"
            app:srcCompat="@drawable/baseline_account_circle_24"
            app:strokeColor="@color/white"
            app:strokeWidth="5dp" />

        <Button
            android:id="@+id/vote1"
            android:layout_width="163dp"
            android:layout_height="73dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Vote"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/voted"
        android:layout_width="137dp"
        android:layout_height="129dp"
        android:layout_below="@id/vote1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/voted" />

    <Button
            android:id="@+id/vote2"
            android:layout_width="163dp"
            android:layout_height="73dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Vote"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" />

    </androidx.constraintlayout.widget.ConstraintLayout>
